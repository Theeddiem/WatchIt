<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainProgramUi"
        xmlns:ViewModel="clr-namespace:ViewModel;assembly=ViewModel" x:Class="MainProgramUi.MainWindow"
        mc:Ignorable="d"
        Title="WatchIt" Height="696" Width="1250" ResizeMode="CanMinimize" Closed="Window_Closed">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFB2AAAA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <!--<Window.DataContext>
        <ViewModel:ModelViewLogic/>
    </Window.DataContext>-->
    <Grid Margin="0,0,-389,0" HorizontalAlignment="Right" Width="1300" MaxWidth="1300" MinWidth="1300">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFB2AAAA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="189*"/>
            <RowDefinition Height="554*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="9.604"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="303*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="getMoviesFromPc" Content="Search The Pc&#xA;" Margin="-293,18,174,0" VerticalAlignment="Top" Height="30" Click="GetMoviesFromPc_Click" Width="157"/>
        <ListBox x:Name="getDataListBox" HorizontalAlignment="Left" Height="501" Margin="-296,124,0,0" VerticalAlignment="Top" Width="289" Grid.RowSpan="2" Background="White"/>
        <ListBox x:Name="MoviesListBox" HorizontalAlignment="Left" Margin="20,46,0,0" VerticalAlignment="Top" Width="520" Height="580" Grid.ColumnSpan="5" Grid.RowSpan="2" SelectionChanged="MoviesListBox_SelectionChanged" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding MoviesFound}">
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <!--left top right bot-->

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,1">
                        <Image Source="{Binding Path = CoverImage}" Stretch="Fill" Height="150" Width="100" Margin="0,0,5,0" />

                        <StackPanel Orientation="Vertical">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Title}" FontSize="14"  Foreground="MidnightBlue" FontWeight="Bold"/>
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding Path=ReleasedYear}" FontSize="14"  Foreground="MidnightBlue" FontWeight="Bold"/>
                                <TextBlock Margin="0,0,5,0" />
                                <TextBlock Text="{Binding Path=Rating}" FontSize="14" />
                                <TextBlock Text="/10" FontSize="14" />
                            </StackPanel>

                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding Path=Genre}" />
                            <TextBlock Text=" " />
                        </StackPanel>

                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <ComboBox x:Name="SortTypeComboBox" Grid.Column="4" HorizontalAlignment="Left" Margin="110,7,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SortTypeComboBox_SelectionChanged" SelectedIndex="-1" RenderTransformOrigin="-0.138,0.545">
            <ComboBoxItem Content="By Year" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="By Rating" HorizontalAlignment="Left" Width="118" Background="#00000000"/>
            <ComboBoxItem Content="By Genre" HorizontalAlignment="Left" Width="118"/>

        </ComboBox>
        <Image x:Name="CoverImage" Grid.Column="5" HorizontalAlignment="Left" Height="400" Margin="10,48,0,0" VerticalAlignment="Top" Width="277" Grid.RowSpan="2" OpacityMask="Black"/>
        <Image Grid.Column="4" HorizontalAlignment="Left" Height="100" Margin="163,457,0,-4" Grid.Row="1" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2"/>
        <Button x:Name="ImdbBtn" Content="" Grid.Column="5" HorizontalAlignment="Left" Margin="5,289,0,0" Grid.Row="1" VerticalAlignment="Top" Width="111" Height="46" Click="ImdbBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/IMDbIcon.png" TileMode="Tile" Stretch="None"/>
            </Button.Background>
        </Button>
        <Label x:Name="MoviesLabel" Content="Movies" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,18,0,0" Width="83" FontWeight="Bold" FontSize="14" Grid.ColumnSpan="2" RenderTransformOrigin="0.506,0.052" Foreground="#FF00F1D1"/>
        <Label x:Name="MoviesLabel_Copy" Content="Files Found On Your Pc" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-297,90,0,0" Width="267" FontWeight="Bold" FontSize="14" Foreground="#FF00F1D1"/>
        <Label x:Name="MoviesLabel_Copy1" Content="Sort" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="4" Margin="61,2,0,0" Width="52" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.038,0.569"/>
        <Button x:Name="PlayBtn" Content="" Grid.Column="5" HorizontalAlignment="Left" Margin="229,287,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Height="52" Click="PlayBtn_Click" RenderTransformOrigin="0.375,1.089">
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/VlcICon.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <Button x:Name="OpenFolderBtn" Content="" Grid.Column="5" HorizontalAlignment="Left" Margin="141,287,0,0" Grid.Row="1" VerticalAlignment="Top" Width="55" Height="51" Click="OpenFolderBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/FolderIcon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="EditMovieBtn" Content="" Grid.Column="5" HorizontalAlignment="Left" Margin="8,363,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Height="46" Click="EditMovieBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/EditIcon.png"/>
            </Button.Background>
        </Button>
        <ListBox x:Name="FixedListBox" Grid.Column="5" HorizontalAlignment="Left" Height="123" Margin="62,365,0,0" Grid.Row="1" VerticalAlignment="Top" Width="253" SelectionChanged="FixedListBox_SelectionChanged" Visibility="Hidden"/>


    </Grid>
</Window>
